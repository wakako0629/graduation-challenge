<html>
<body>

   <%= form_with(model: @blog, local: true ,url: choose_new_or_edit ) do |form| %>
   <% if @blog.errors.any? %>
    <div id="error_explanation">
        <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
        <ul>
            <% @blog.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
        </ul>
    </div>
  <% end %>
<div class="container">
 <div class="row">
    <%= form.label :title %>
    <%= form.text_field :title %>
    
    <%= form.label :content %>
    <%= form.text_field :content %>
    
    <%= form.label :image %>
    <center><%= form.file_field :image, id: :blog_image %></center>
    <%= form.hidden_field :image_cache %>
  
 <br><%= form.submit %>
  
  
<% end %>

<br>
<br><%= link_to '一覧に戻る',blogs_path %>

</div>
</div>


</body>
</html>